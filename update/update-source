#!/bin/bash

echo -e -n "\033[1;37mDelete source directory ... \033[0;39m"
rm -rf source
echo -e "\033[1;32mDone\033[0;39m"
echo -e -n "\033[1;37mMaking source directory ... \033[0;39m"
mkdir source
echo -e "\033[1;32mDone\033[0;39m"
echo -e -n "\033[1;37mDownloading source file ... \033[0;39m"
cd source
nowdir=$(pwd)
echo -e -n "\r\033[1;37mDownloading source file ... Downloading ENGLISH ... \033[0;39m"
wget https://raw.githubusercontent.com/TamaTamaGoGo/RPi-Tools/main/source/app-en.csv &>/dev/null
echo -e -n "\r\033[1;37mDownloading source file ... Downloading JAPANESE ... \033[0;39m"
wget https://raw.githubusercontent.com/TamaTamaGoGo/RPi-Tools/main/source/app-jp.csv &>/dev/null
echo -e "\r\033[1;37mDownloading source file ... \033[0;39m\033[1;32mDone\033[0;39m                      "
echo -e "\r\033[1;37mSource Update ... \033[0;39m\033[1;32mDone\033[0;39m"
